/**index.wxss**/
page{
background-color:#eee;
height:100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bgi{
    background: url('https://upload.cc/i1/2018/05/28/ODwjE3.jpg') no-repeat;
    background-size: cover;
    width:100%;
    height:300rpx;
    background-position: top;
    
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 311rpx;
  margin-top:40rpx;
  margin-bottom:30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #eee;
  margin-bottom: 15rpx;
}

.usermotto {
  margin-top: 1px;
}

.center-button{
  margin-top:20rpx;
  margin-bottom: 15rpx;
  width:250rpx;
  font-size: 12px;
  background-color: #fff;
  color:#caa;
}
.bottom-button{
  background-color: #41a5bc;
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  height:10vh;
  line-height: 8vh;
  color: #fff;
  font-size:16px;
}
.index-title{
  margin-top:20rpx;
  background-color: #fff;
  width:40%;
  line-height:75rpx;
  margin:auto;
  border-radius: 50rpx;
  border:#333 1rpx solid;
}
.carditem{
  background-color: #fff;
  width:85%;
  min-height: 200rpx;
  margin:auto;
  margin-bottom: 30rpx;
  border-radius: 15rpx;
  margin-top:30rpx;
  padding:30rpx;
  box-shadow:2rpx 2rpx 60rpx 0rpx #dedede;
}
.cardtitle{
  font-size:32rpx;
  color:#333;
}
.card{
  display:flex;
}
.divline{
  background-color: #ccc;
  width:100%;
  height:3rpx;
  border-radius: 3rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
}
.maincontent{
  display:flex;
  flex-direction: column;
  font-size:30rpx;
  color:#666;
  margin-bottom: 5rpx;
  width:200rpx;
}
.remaining{
  font-size:25rpx;
  color:#41a5bc;
  text-align: right; 
  width: 630rpx;
}
.carditem-hover{
  background-color:#eee;
}
.btn-hover{
  background-color: #21859c;
}
.maintext{
  margin-bottom: 5rpx;
  text-align: right; 
  width: 430rpx;
  font-size:30rpx;
  color:#666;
}
.view-history{
  display:flex;
  margin-left: auto;
  margin-right: auto;
  background-color: #fff;
  width:45%;
  height:100rpx;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
  box-shadow:2rpx 2rpx 60rpx 0rpx #dedede;
}
.view-icon{
    background: url('https://upload.cc/i1/2018/05/28/aGLbdv.jpg') no-repeat;
    background-size: cover;
    width:100rpx;
    border-radius: 50%;
    text-align:left;
    height:100rpx;
}
.view-text{
  text-align:right;
  line-height: 100rpx;
  width:190rpx;
  color: #41a5bc;
}
.topmad{
  height:90vh;
}